<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.project</groupId>
  <artifactId>FormularProject</artifactId>
  <packaging>war</packaging>
  <version>0.0.1-SNAPSHOT</version>
  <name>FormularProject Maven Webapp</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
    <!-- Dependency for javax (Aug 2017) servlet API -->
    <dependency>
		<groupId>javax.servlet</groupId>
		<artifactId>javax.servlet-api</artifactId>
		<version>4.0.0</version>
		<scope>provided</scope>
	</dependency>
	<!-- Dependency for tomcat 9 (May 2017) servlet API 
	<dependency>
    	<groupId>org.apache.tomcat</groupId>
    	<artifactId>tomcat-servlet-api</artifactId>
    	<version>9.0.0.M21</version>
	</dependency>
	-->
	<!--  Dependency for HSQLDB -->
	<dependency>
    	<groupId>org.hsqldb</groupId>
    	<artifactId>hsqldb</artifactId>
    	<version>2.4.1</version>
    	<scope>test</scope>
	</dependency>
  </dependencies>
  <build>
    <finalName>FormularProject</finalName>
    <plugins>
    	<plugin><!-- Plugin for tomee which is required for assignment  -->
      		<groupId>org.apache.openejb.maven</groupId>
      		<artifactId>tomee-maven-plugin</artifactId>
      		<version>1.7.1</version>
      		<configuration>
        		<tomeeVersion>1.7.1</tomeeVersion>
        		<tomeeClassifier>plus</tomeeClassifier>
      		</configuration>
    	</plugin>
	</plugins>
  </build>
</project>
